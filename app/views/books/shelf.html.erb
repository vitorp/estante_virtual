<div class="container" style="height: 100%;">
  <div class="card-deck" style="height: 100%; align-items: center;">
    <% @books.each do |book| %>
      <div class="card" >
        <div class="card-header">
          <%= book.title %>
        </div>
        <div class="card-body">
          <p class="card-text"><%= book.author %></p>
          <%= link_to "Detalhes do livro", book_path(book) %>
          <p>
            <% if book.tradable %>
              <%= link_to "Remover livro de trocas", remove_trade_path(book) %>
            <% else %>
              <%= link_to "Disponibilizar para trocas", setup_trade_path(book) %>
            <% end %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
