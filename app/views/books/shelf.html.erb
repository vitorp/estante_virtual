<div class="container" style="height: 100%;">
  <div class="card-deck" style="height: 100%; align-items: center;">
    <% @books.each do |book| %>
      <div class="card" >
        <div class="card-header">
          <%= book.title %>
        </div>
        <div class="card-body">
          <p class="card-text"><%= book.author %></p>
          <%= link_to "Detalhes do livro", book_path(book) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
