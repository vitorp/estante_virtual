<div class="container center-content">
  <%= form_for :login, url: login_path, html: { class: "row" } do |f| %>
    <h4 class="col-md-6 offset-md-3 text-center"> Login </h4>
    <% if flash[:error].present? %>
      <div class="alert alert-danger col-md-4 offset-md-4" role="alert">
        <ul>
          <% flash[:error].each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group col-md-6 offset-md-3">
      <%= f.label :nickname %>
      <%= f.text_field :nickname , class: "form-control" %>
    </div>
    <div class="form-group col-md-6 offset-md-3">
      <%= f.label :password %>
      <%= f.password_field :password , class: "form-control" %>
    </div>
    <div class="col-md-2 offset-md-3">
      <%= f.submit "Entrar", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
